<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <!-- UPPER LAYOUT -->
    <RelativeLayout
        android:id="@+id/main_top_layout"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="168dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/name_icon" />

    </RelativeLayout>

    <!-- MAIN LAYOUT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom_layout"
        android:layout_below="@+id/main_top_layout"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/heading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Recent Uploads"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.parneet.plotline.BucketRecyclerView
            android:id="@+id/recyclerview"
            android:layout_below="@+id/heading_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:id="@+id/empty_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/picture"
                android:layout_width="96dp"
                android:layout_height="96dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="16dp"/>

            <TextView
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="Nothing to Show Here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <!-- BOTTOM LAYOUT -->
    <LinearLayout
        android:id="@+id/main_bottom_layout"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:background="@drawable/main_blue_button"
            android:layout_width="48dp"
            android:layout_height="4dp"/>

        <!-- BOTTOM URL BAR -->
        <RelativeLayout
            android:background="@drawable/edit_text_back"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/link_alt"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <EditText
                android:layout_toStartOf="@+id/submit_url_button"
                android:layout_toEndOf="@+id/icon_image"
                android:id="@+id/edit_text_main"
                android:textSize="18sp"
                android:textCursorDrawable="@null"
                android:background="@color/transparent"
                android:hint="Enter any URL"
                android:textColorHint="@color/greyText"
                android:textColor="@color/greyText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_margin="3dp"
                android:background="@drawable/main_blue_button"
                android:id="@+id/submit_url_button"
                android:layout_alignParentEnd="true"
                android:layout_width="38dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <!-- BOTTOM TWO BUTTONS -->
        <LinearLayout
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <LinearLayout
                android:id="@+id/btn_open_gallery"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/main_blue_button"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/gallery"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_open_camera"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/main_blue_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/camera"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>